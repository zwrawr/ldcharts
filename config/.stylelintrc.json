{
	"extends": "stylelint-config-standard",

	"rules": {
		"at-rule-no-unknown": null,
		"indentation": "tab",
		"number-leading-zero": null,
		"declaration-empty-line-before": [
			"always", {
				"ignore": [
					"after-comment",
					"after-declaration",
					"inside-single-line-block"
				]
			}
		]
	}
}