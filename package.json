{
  "name": "ldcharts",
  "version": "0.0.1",
  "description": "simple charts libary in preact",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --config=config/.jestrc.json",
    "lint": "npm run lint:js; npm run lint:css",
    "build": "npm run build:esdoc",
    "clean": "echo [clean] Starting... ; npm run clean:coverage ; npm run clean:build ; echo [clean] Finished",
    "lint:js": "eslint lib --config config/.eslintrc.js",
    "lint:css": "stylelint **/*.less --config ./config/.stylelintrc.json",
    "build:esdoc": "esdoc2 -c config/esdoc/.esdocrc.json",
    "clean:coverage": "if [ -e coverage ] ; then rm -rf coverage && echo [clean] cleaned coverage ; fi",
    "clean:build": "if [ -e build ] ; then rm -rf build && echo [clean] cleaned build ; fi"
  },
  "keywords": [
    "preact",
    "chart",
    "graph",
    "visulization"
  ],
  "author": "Zak West",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "esdoc2": "^2",
    "esdoc2-brand-plugin": "^2",
    "esdoc2-exclude-source-plugin": "^2",
    "esdoc2-inject-style-plugin": "^2",
    "esdoc2-jsx-plugin": "^2",
    "esdoc2-standard-plugin": "^2",
    "eslint": "^6.0.0",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.8.0",
    "jest-each": "^24.8.0",
    "jest-fetch-mock": "^2.1.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "preact": "^8.4.2"
  }
}
